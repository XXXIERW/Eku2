page {
    background: #000;
}

.layout-text {
    background: #000;
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
}

.text {
    position: absolute;
    color: #fff;
    transform: rotate(90deg) translateY(-50%);
    white-space: nowrap;
    letter-spacing: 20rpx;
    animation: neon1 1.5s ease-in-out infinite alternate;
}

.layout-setting {
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    padding-right: 20rpx;
    padding-bottom: 20rpx;
}

.button-image {
    margin-top: 30rpx;
    color: #fff;
    font-size: 30rpx;
    border-radius: 40rpx;
    padding-top: 0rpx;
    padding-bottom: 0rpx;
    background: #333333;
    text-align: center;
}

.view-button {
    width: 80rpx;
    height: 80rpx;
    background: #333333;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
}

.view-button button {
    width: 100%;
    height: 100%;
    padding: 0;
    background: none;
    font-size: 0;
    color: #fff;
}

.view-button button::after {
    border: none;
}

.view-button image {
    width: 100%;
    height: 100%;
}

.layout-text-setting {
    position: fixed;
    bottom: 0;
    right: 0;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    height: 600rpx;
    width: 250rpx;
}

.layout-text-select {
    width: 150rpx;
    height: 100%;
    background: #2C2B30;
}

.layout-text-type {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100rpx;
    height: 100%;
    background: #2C2B30;
}

.layout-text-type button {
    width: 100rpx;
    height: 100rpx;
    border-radius: 0;
    font-size: 30rpx;
    padding: 0;
    text-align: center;
    line-height: 100rpx;
    margin: 0;
    color: #fff;
    background: #2C2B30;
}

.layout-text-type button::after {
    border: none;
}

.layout-size {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background: #2C2B30;
}

.buttonItem {
    color: #fff;
    font-size: 30rpx;
    margin-bottom: 20rpx;
    padding: 0;
    border-radius: 50rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #414045;
}

@-webkit-keyframes neon1 {
    from {
        text-shadow: 0 0 5px #fff,0 0 10px #FF1378,0 0 15px #FF1378,0 0 20px #FF1378;
    }

    to {
        text-shadow: 0 0 5px #fff,0 0 10px #fff,0 0 15px #fff,0 0 20px #FF1378,0 0 35px #FF1378,0 0 40px #FF1378,0 0 45px #FF1378,0 0 50px #FF1378;
    }
}

